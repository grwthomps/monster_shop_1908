<h1 align = "center">Order Info</h1>
<center>
  <table id="order-info">
    <tr>
      <th>Order ID</th>
      <th>Date Created</th>
      <th>Date Updated</th>
      <th>Status</th>
      <th>Number of Items</th>
      <th>Grand Total</th>
    </tr>
    <tr>
      <td><p><%= @order.id %></p></td>
      <td><p><%= @order.created_at %></p></td>
      <td><p><%= @order.updated_at %></p></td>
      <td><p><%= @order.status %></p></td>
      <td><p><%= @order.item_orders.count %></p></td>
      <td><p><%= number_to_currency(@order.grandtotal)%></p></td>
    </tr>
  </table>

<table>
  <tr>
    <th>Item</th>
    <th>Description</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Image</th>
    <th>Subtotal</th>
  </tr>
  <% @order.item_orders.each do |item_order|%>
    <tr>
    <section id = "item-<%=item_order.item_id%>">
        <td><p><%= item_order.item.name %></p></td>
        <td><p><%= item_order.item.description %></p></td>
        <td><p><%= number_to_currency(item_order.price)%></p></td>
        <td><p><%= item_order.quantity%></p></td>
        <td><p><%= image_tag item_order.item.image%> </p></td>
        <td><p><%= number_to_currency(item_order.subtotal)%></p></td>
      </section>
    </tr>
  <% end %>
</table>
<article class="justify-content-center row">
  <%= button_to 'Cancel Order', "/profile/orders/#{@order.id}", method: :patch, class: 'btn btn-danger mt-4' %>
</article>
