<% if @merchant %>
  <h1><%= link_to @merchant.name, "/merchants/#{@merchant.id}"%><span> Items</span></h1>
  <p align="center"><%= link_to "Add New Item", "/merchants/#{@merchant.id}/items/new" %></p>
<% else %>
  <h1>All Items</h1>
<% end %>
<section class="grid-container">
  <% @items.active_only.each do |item| %>
    <section class = "grid-item" id= 'item-<%=item.id%>'>
      <h2> <%=link_to item.name, "/items/#{item.id}" %> </h2>
      <p>Sold by: <%=link_to item.merchant.name, "/merchants/#{item.merchant.id}" %></p>
      <%= link_to image_tag(item.image), "/items/#{item.id}", class: 'item-image' %>
      <p> <%= item.description unless @merchant%> </p>
      <p>Price: <%=number_to_currency(item.price) %> </p>
      <p>Inventory: <%= item.inventory %> </p>
      <% if !@merchant %>
      <% end %>
      <% if item.active? %>
        <p>Active</p>
      <% else %>
        <p>Inactive</p>
      <% end %>
    </section>
    <% end %>
</section>

<section class="top-five">
  <h3>Five Most Popular Items</h3>
  <% @items.top_five_ordered.each_with_index do |item, index| %>
    <article id="top-five-<%= index %>">
      <h5><%= link_to item.name, "/items/#{item.id}" %></h5>
      <p>Quantity Ordered: <%= item.quantity_ordered %></p>
    </article>
  <% end %>
</section>

<section class="bottom-five">
  <h3>Five Least Popular Items</h3>
  <% @items.bottom_five_ordered.each_with_index do |item, index| %>
    <article id="bottom-five-<%= index %>">
      <h5><%= link_to item.name, "/items/#{item.id}" %></h5>
      <p>Quantity Ordered: <%= item.quantity_ordered %></p>
    </article>
  <% end %>
</section>
