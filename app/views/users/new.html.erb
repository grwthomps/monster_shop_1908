<h1 class="mt-4">Register</h1>
<div class="justify-content-center">
<%= form_tag "/users", class: "form-width" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @user.name, class: "form-control" %>

  <%= label_tag :address %>
  <%= text_field_tag :address, @user.address, class: "form-control" %>

  <%= label_tag :city %>
  <%= text_field_tag :city, @user.city, class: "form-control" %>

  <%= label_tag :state %>
  <%= text_field_tag :state, @user.state, class: "form-control" %>

  <%= label_tag "Zip code" %>
  <%= text_field_tag :zip, @user.zip, class: "form-control" %>

  <%= label_tag "Email address" %>
  <%= text_field_tag :email, nil, class: "form-control" %>

  <%= label_tag :password %>
  <%= password_field_tag :password, nil, class: "form-control" %>

  <%= label_tag "Confirm password" %>
  <%= password_field_tag :password_confirmation, nil, class: "form-control" %>

  <%= submit_tag "Create User", class: "btn btn-primary" %>
<% end %>
</div>
